<h1>Payment Results</h1>

<dl>
  <dt>APR</dt>
  <dd><%= @apr.to_fs(:percentage, precision: 4, delimiter: "", separator: ".") %></dd>

  <dt>Number of years</dt>
  <dd><%= @years.round %></dd>

  <dt>Principal</dt>
  <dd><%= @principal.to_fs(:currency) %></dd>

  <dt>Payment</dt>
  <dd><%= @payment.to_fs(:currency, precision: 2) %></dd>
</dl>

<a href="/payment/new">Calculate another payment</a>
